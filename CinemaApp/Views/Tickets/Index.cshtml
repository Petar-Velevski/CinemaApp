@model List<CinemaApp.Models.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new ticket</a>
    </div>

    <form method="post">
        <div class="row"
            
                <span for="FilterDate">Check Which Movie Are Available:&emsp;</span>
            
                <input class="form-control w-25" type="date" name="FilterDate" id="FilterDate" />
                <div class="col-1">
                <button class="btn btn-success btn-block" type="submit">Filter</button>
                </div>
        </div>
    </form>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 58rem;">
                    <img class="card-img-top" src="@item.TicketImage" style="height: 38%" alt="Image for product!" />

                    <div class="card-body">
                        <h3 class="card-title">@item.TicketName</h3>
                        <p class="card-text">@item.TicketDescription</p>
                        <h6>Genre:    @item.Genre</h6>
                      
                    
                        <span><h6>Movie projection:</h6></span>

                        <p class="card-text">@item.DateValid</p>


                        <h6>Price: @item.TicketPrice</h6>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="Tickets" asp-action="AddTicketToCard" asp-route-id="@item.Id" class="btn btn-secondary">Add To Cart</a>

                    </div>
                </div>
            </div>



            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>